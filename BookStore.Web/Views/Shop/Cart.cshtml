@model IEnumerable<BookStore.Models.Cart>

@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal total = 0;
}

<h2>Cart</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    total += item.Quantity * item.Price;
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BookId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @String.Format("{0:c}",item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.username)
            </td>
            <td>
                <a asp-action="RemoveFromCart" asp-route-id="@item.cartId">Delete</a>
            </td>
        </tr>
}
    <tr>
        <td colspan="2"></td>
        <td class="text-right">@String.Format("{0:c}",total)</td>
        <td>
            <a asp-controller="Shop" asp-action="Index" class="btn btn-primary">Keep Shopping</a>
            <a asp-controller="Shop" asp-action="Checkout" class="btn btn-primary">Checkout</a>
        </td>
    </tr>
    </tbody>
</table>
